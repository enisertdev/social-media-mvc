<!------- FRIEND REQUEST ------->
<div class="friend-requests">
    <h4>Requests</h4>
    @foreach (var request in Model)
    {
        <div class="request">
            <div class="info">
                <div class="profile-photo">
                    <img src="~/social-media-website-main/images/profile-20.jpg">
                </div>
                <div>
                    <h5>@request.FollowerName @request.FollowerLastName</h5>
                    <p class="text-muted">8 mutual friends</p>
                </div>
            </div>
            <div class="action">
                <a asp-action="Accept" asp-controller="Friendship" asp-route-userName="@request.FollowerUserName">
                    <button class="btn btn-primary">
                        Accept
                    </button>
                </a>
                <button class="btn">
                    Decline
                </button>
            </div>
        </div>
    }
</div>